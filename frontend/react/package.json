{
  "name": "styra-tickethub-node-react",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "^18.0.0"
  },
  "workspaces": [
    "client"
  ],
  "scripts": {
    "start": "concurrently 'npm run start:server' 'npm run start:client'",
    "start:server": "nodemon",
    "start:client": "npm run start --workspace=client"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js, html",
    "exec": "node ./src/server"
  },
  "devDependencies": {
    "concurrently": "^7.4.0",
    "nodemon": "^2.0.20"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "express": "^4.18.1",
    "http-status-codes": "^2.2.0"
  }
}

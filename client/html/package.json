{
    "name": "styra-tickethub-html",
    "version": "0.3.0",
    "type": "module",
    "scripts": {
      "start": "node ./src/server",
      "start:dev": "nodemon",
      "lint": "npx eslint ."
    },
    "nodemonConfig": {
      "watch": [
        "src"
      ],
      "ext": "js, html",
      "exec": "node ./src/server"
    },
    "eslintConfig": {
      "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
      },
      "rules": {
        "max-len": [
          "error",
          {
            "code": 100
          }
        ],
        "no-console": 1,
        "no-extra-boolean-cast": 0
      }
    },
    "eslintIgnore": [
      "src/public/"
    ],
    "dependencies": {
      "express": "^4.18.1",
      "http-status-codes": "^2.2.0",
      "module-alias": "^2.2.2",
      "morgan": "^1.10.0"
    },
    "devDependencies": {
      "eslint": "^8.14.0",
      "eslint-plugin-import": "^2.25.4",
      "eslint-plugin-node": "^11.1.0",
      "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
      "eslint-plugin-sort-requires": "^2.1.0",
      "find": "^0.3.0",
      "fs-extra": "^10.1.0",
      "nodemon": "^2.0.20"
    }
  }
  
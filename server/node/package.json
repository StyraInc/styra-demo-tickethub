{
  "name": "styra-tickethub-js",
  "version": "0.3.0",
  "type": "module",
  "scripts": {
    "start": "node ./src/server",
    "start:dev": "nodemon",
    "lint": "npx eslint ."
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js, html",
    "ignore": [
      "src/public"
    ],
    "exec": "node ./src/server"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 105
        }
      ],
      "no-console": 0,
      "no-extra-boolean-cast": 0
    }
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@styra/opa": "^1.7.9",
    "@ucast/core": "^1.10.2",
    "command-line-args": "^6.0.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.2.0",
    "jsonfile": "^6.1.0",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "eslint": "^9.24.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-sort-requires": "^2.1.0",
    "find": "^0.3.0",
    "fs-extra": "^11.3.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.5.0",
    "supertest": "^7.1.0"
  }
}

{
  "name": "styra-tickethub-js",
  "version": "0.3.0",
  "type": "module",
  "scripts": {
    "start": "node ./src/server",
    "start:dev": "nodemon",
    "lint": "npx eslint ."
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js, html",
    "ignore": [
      "src/public"
    ],
    "exec": "node ./src/server"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 105
        }
      ],
      "no-console": 0,
      "no-extra-boolean-cast": 0
    }
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "command-line-args": "^6.0.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.2.0",
    "jsonfile": "^6.1.0",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "@styra/opa": "^1.4.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-sort-requires": "^2.1.0",
    "find": "^0.3.0",
    "fs-extra": "^11.2.0",
    "nodemon": "^3.1.4",
    "prisma": "^5.18.0",
    "supertest": "^7.0.0"
  }
}

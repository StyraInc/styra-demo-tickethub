{
  "name": "styra-tickethub-js",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "^18.0.0"
  },
  "scripts": {
    "start": "node ./src/server",
    "start:dev": "nodemon",
    "lint": "npx eslint ."
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js, html",
    "ignore": [
      "src/public"
    ],
    "exec": "node ./src/server"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 100
        }
      ],
      "no-console": 1,
      "no-extra-boolean-cast": 0
    }
  },
  "eslintIgnore": [
    "src/public/"
  ],
  "dependencies": {
    "command-line-args": "^5.2.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^5.0.2",
    "http-status-codes": "^2.2.0",
    "jsonfile": "^6.1.0",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "eslint": "^8.14.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-sort-requires": "^2.1.0",
    "find": "^0.3.0",
    "fs-extra": "^10.1.0",
    "nodemon": "^2.0.20",
    "supertest": "^6.2.2"
  }
}
